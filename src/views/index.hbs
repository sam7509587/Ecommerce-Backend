<!DOCTYPE html>
<html lang="en">
<head>
  {{!-- <meta charset="UTF-8"> --}}
  {{!-- <meta http-equiv="X-UA-Compatible" content="IE=edge"> --}}
  {{!-- <meta name="viewport" content="width=device-width, initial-scale=1.0"> --}}
  <title>Document</title>
  <link rel="stylesheet" href="/./stylesheets/style.css">
</head>
<body>
  <div class="wrapper fadeInDown">
  <div id="formContent">
    <!-- Tabs Titles -->
    <h2 class="active"> Log In/ SignUP </h2>

    <!-- Icon -->
    <div class="fadeIn first">
      <img src="http://danielzawadzki.com/codepen/01/icon.svg" id="icon" alt="User Icon" />
    </div>
    <!-- Login Form -->
    <form action="/api/v1/admin/loginAdmin" method="post">
      <input type="text" name="email" id="login" class="fadeIn second"  placeholder="login">
      <input type="text" id="password" class="fadeIn third" name="password" placeholder="password">
      <input type="submit" class="fadeIn fourth" value="Log In">
    </form>
<h5 style="color: skyblue;">{{msg}}</h5>
    <!-- Remind Passowrd -->
    <div id="formFooter">
      <a class="underlineHover" href="/forgotpassword">Forgot Password?</a>
    </div>
  </div>
</div>
</body>
</html>
