<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

    <title>Dash Board</title>
  </head>
  <body>
 <h1 style="color: blue;">Welcome ! 
<span class="badge badge-pill badge-success">Admin</span></h1>
 
    <div >
      <h1 style="color: darkblue;">this is a database </h1>
  <form action="/sort" method="get">
    <label for="field">Choose Field:</label>
    <select name="field" id="field">
      <option value="fname">first name</option>
      <option value="lname">last name</option>
      <option value="age">Age</option>
      <option value="add">Address</option>
    </select> <br><br>


    <label for="sort">Choose Sort :</label>
    <select name="sort" id="sort">
      <option value="1">assending </option>
      <option value="-1">desending </option>
    </select>
    <br><br>

    <label for="range">Choose Range :</label>
    <select name="range" id="range">
      <option value="1">1-5</option>
      <option value="6">6-10</option>
    </select>
    <input type="submit" value="sort">
  </form>
  <br><br>
  <div class="table">
  </div>
  <table border="1">
      

    <tr>
        <th>photoUrl</th>
        <th>Full Name</th>
        <th>phone Number</th>
        <th>role</th>
        <th>isVerified</th>
        <th>isDeleted</th>
        <th>isApproved</th>
        <th>createdAt</th>
        <th>updatedAt</th>
        <th>Approve / Reject </th>
    </tr>

    {{#each newSellers}} 
    <tr>
        <th>{{this.photoUrl}}</th>
      <th>{{this.fullName}}</th>
        <th>{{this.phoneNumber}}</th>
        <th>{{this.role}}</th>
        <th>{{this.isVerified}}</th>
        <th>{{this.isDeleted}}</th>
        <th>{{this.isApproved}}</th>
        <th>{{this.createdAt}}</th>
        <th>{{this.updatedAt}}</th>
       <td>
        <form action='/api/v1/admin/auth/approve/?id={{this.id}}&token={{this.accessToken}}' method="post">
          <input type="submit" value="Approve/Reject">
       </form>
       </td>   
  </tr>
    {{/each}}
  </table>
{{msg}}
  <h2>completed</h2>
 </div>

